<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9CEEC"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="200dp"
        android:text="@string/who_is_the_44th_president_of_the_united_states"
        android:textSize="40sp"
        android:gravity="center"
        android:textColor="#856C6C"
        android:background="@drawable/card_background"
        android:elevation="20dp"
        />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_height="200dp"
        android:background="#DACC55"
        android:textColor="#2A958B"/>

    <TextView
        android:id="@+id/answer1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/flashcard_question"
        android:layout_marginTop="51dp"
        android:layout_centerInParent="true"
        android:background="#FF9800"
        android:gravity="center"
        android:text="George H. W.Bush"
        android:textColor="#242E2D"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/answer2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/answer1"
        android:layout_marginTop="51dp"
        android:layout_centerInParent="true"
        android:background="#FF9800"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="#121717"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/answer3"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/answer2"
        android:layout_marginTop="51dp"
        android:layout_centerInParent="true"
        android:background="#FF9800"
        android:gravity="center"
        android:text="Barack Obama"
        android:textColor="#101B1A"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@id/answer3"
        android:layout_marginTop="16dp"
        android:src="@drawable/eyeoff" />
    <ImageView
        android:id="@+id/toggle_choices_Invisibility"
        android:layout_width="400dp"
        android:layout_height="40dp"
        android:layout_below="@id/answer3"
        android:layout_marginTop="16dp"
        android:src="@drawable/eyeon" />


    <ImageView
            android:id="@+id/add"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="570dp"
            android:src="@drawable/ic_add"
            android:background="#00BCD4"/>
    <ImageView
        android:id="@+id/eraser"
        android:layout_height="400dp"
        android:layout_width="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_trashcan"
        />
    <ImageView
        android:id="@+id/editbutton"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_marginRight="260dp"
        android:layout_marginTop="570dp"
        android:src="@drawable/ic_edit"
        android:background="#00BCD4"/>
    <ImageView
        android:id="@+id/next"
        android:layout_height="400dp"
        android:layout_width="40dp"
        android:layout_marginTop="148dp"
        android:layout_marginLeft="320dp"
        android:src="@drawable/ic_next" />

    <ImageView
        android:id="@+id/emptyCard"
        android:layout_width="400dp"
        android:layout_height="800dp"
        android:layout_marginTop="256dp"
        android:layout_marginBottom="133dp"
        android:src="@drawable/ic_cards"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/emptyText1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:text="Flashcard Empty"
        android:textSize="20sp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/emptyText2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:text="Press on add button to create new cards"
        android:textSize="20sp"
        android:visibility="invisible"/>
    />

    />
</RelativeLayout>